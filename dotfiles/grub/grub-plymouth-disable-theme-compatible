# This is theme compatible plymouth disable grub config file
GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="$(sed 's, release .*$,,g' /etc/system-release)"
GRUB_DEFAULT=saved
GRUB_DISABLE_SUBMENU=true
# GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="quiet loglevel=3 rd.systemd.show_status=auto rd.udev.log_level=3 splash rd.plymouth=0 plymouth.enable=0 video=SVIDEO1:d"
GRUB_DISABLE_RECOVERY="true"
GRUB_ENABLE_BLSCFG=false